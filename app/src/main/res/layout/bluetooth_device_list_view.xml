<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RadioButton
        android:id="@+id/bluetoothDeviceRadioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/bluetoothDeviceImageView"
        android:src="@mipmap/bluetooth"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/bluetoothDeviceTextView"
        android:layout_toRightOf="@+id/bluetoothDeviceRadioButton"
        android:layout_toEndOf="@+id/bluetoothDeviceRadioButton" />

    <TextView
        android:id="@+id/bluetoothDeviceTextView"
        android:text="HC:05"
        android:textSize="@dimen/abc_text_size_large_material"
        android:textColor="#00000F"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_above="@+id/bluetoothMacAddressTextView"
        android:layout_toRightOf="@+id/bluetoothDeviceImageView"
        android:layout_toEndOf="@+id/bluetoothDeviceImageView" />

    <TextView
        android:id="@+id/bluetoothMacAddressTextView"
        android:text="30:15:01:16:03:90"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_below="@+id/bluetoothDeviceRadioButton"
        android:layout_alignLeft="@+id/bluetoothDeviceTextView"
        android:layout_alignStart="@+id/bluetoothDeviceTextView" />

</RelativeLayout>